<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.evgeniy.calculator.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:ems="20"
            android:id="@+id/txtResult"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:gravity="center_vertical|right"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/button1"
            android:layout_row="1"
            android:layout_column="0"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="1"
            android:onClick="buttonClick" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/button2"
            android:width="70dp"
            android:height="70dp"
            android:layout_row="1"
            android:onClick="buttonClick"
            android:contentDescription="2"
            android:layout_column="1" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:width="70dp"
            android:height="70dp"
            android:onClick="buttonClick"
            android:contentDescription="3"
            android:id="@+id/button3"
            android:layout_row="1"
            android:layout_column="2" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:width="70dp"
            android:onClick="buttonClick"
            android:height="70dp"
            android:id="@+id/button4"
            android:contentDescription="4"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:onClick="buttonClick"
            android:id="@+id/button5"
            android:layout_row="2"
            android:width="70dp"
            android:contentDescription="5"
            android:height="70dp"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:onClick="buttonClick"
            android:contentDescription="6"
            android:width="70dp"
            android:height="70dp"
            android:id="@+id/button6"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:onClick="buttonClick"
            android:contentDescription="7"
            android:width="70dp"
            android:height="70dp"
            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:onClick="buttonClick"
            android:width="70dp"
            android:height="70dp"
            android:contentDescription="8"
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:onClick="buttonClick"
            android:width="70dp"
            android:height="70dp"
            android:id="@+id/button9"
            android:layout_row="3"
            android:contentDescription="9"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:contentDescription="0"
            android:onClick="buttonClick"
            android:width="70dp"
            android:height="70dp"
            android:id="@+id/button0"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:width="70dp"
            android:height="70dp"
            android:id="@+id/butComma"
            android:onClick="buttonClick"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"
            android:width="70dp"
            android:height="70dp"
            android:id="@+id/butDelete"
            android:onClick="buttonClick"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + "
            android:width="70dp"
            android:height="70dp"
            android:id="@+id/butAdd"
            android:onClick="buttonClick"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:width="70dp"
            android:height="70dp"
            android:onClick="buttonClick"
            android:id="@+id/butSubtract"
            android:layout_row="4"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" * "
            android:width="70dp"
            android:height="70dp"
            android:onClick="buttonClick"
            android:id="@+id/butMultiply"
            android:layout_row="4"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:width="70dp"
            android:onClick="buttonClick"
            android:height="70dp"
            android:id="@+id/butDevide"
            android:layout_row="4"
            android:layout_column="3" />

        <Button
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:text=" C "
            android:width="140dp"
            android:onClick="buttonClick"
            android:height="70dp"
            android:id="@+id/butClear"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"/>

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text=" = "
            android:width="140dp"
            android:onClick="buttonClick"
            android:height="70dp"
            android:id="@+id/butResult"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnSpan="2"/>

    </GridLayout>


</LinearLayout>
